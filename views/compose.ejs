<%-include('partials/header')%>

<h1>Compose</h1>

<form class="form-horizontal" method="post" action="/compose">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" id="title" name="postTitle">
    </div>

    <div class="form-group">
        <label for="textPost">Post</label>        
        <textarea class="form-control" name="postBody" id="textPost" cols="30" rows="10"></textarea>        
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit" name="postButton">Publish</button>
    </div>
  </form>

<%-include('partials/footer')%>